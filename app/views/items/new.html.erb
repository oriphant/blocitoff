<h1>Items#new</h1>
<p>Find me in app/views/items/new.html.erb</p>

<%=form_for @item do |f| %>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter To Do Item" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
<%end%>
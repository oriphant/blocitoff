
<%=form_for @item do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.errors.count,"error")%>.</h4>
        <ul>
          <%item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <%end%>
        </ul>
      </div>
      <%end%>
      
      <%= form_group_tag(item.errors[:name]) do %>
